<div class="container">
  <div class="title-front-dash">
      <% if @bookings.empty? %>
      <div class="  text-center">
        <br>
    <p>no <br>booking</p>
      </div>
      <% else %>
      <div class=" title-front text-center">
        <br>
    <p>This is your booked Destinations <br>all over the universe</p>
      </div>
  </div>
      <div class="row">
        <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-sm-12 col-md-12 ">
          <div class="product">
           <div class="card-img " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url(<%= booking.destination.seed_photo ? (image_path booking.destination.seed_photo) : (cl_image_path booking.destination.photo.path) %> );">
          </div>

           <div class="product-body">

            <% if current_user.avatar.nil? %>
            <%= image_tag "rocket.png", class: "avatar card-user-dash hidden-xs", id: "logo" %>
            <% else %>
            <%= cl_image_tag current_user.avatar.path, class: "avatar card-user-dash hidden-xs" %>
            <% end %>
            <div class="product-description">
              <h3><%= booking.destination.name %></h3>

              <p><%= booking.destination.planet_type %></p>
              <p> booked from <%= booking.start_date %> to <%= booking.end_date %></p>
                <br>
              <%= link_to 'Delete Booking', destination_booking_path(booking.destination, booking),method: :delete, class: "btn rounded-black" %>

            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>


<hr>

  <div class="container ">
    <div class="title-front-dash">
      <% if @created_destination.any? %>
      <div class="text-center">
      <p>This is your Destinations <br>all over the universe</p>
    </div>
      <hr>
    <% else %>
    <div class="text-center">
  <p>Tno <br>all over the universe</p>
      <hr>
    </div>
  <% end %>
   </div>
    <div class="row">


      <% @created_destination.each do |destination| %>


      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="product">
         <div class="card-img " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url(<%= destination.seed_photo ? (image_path destination.seed_photo) : (cl_image_path destination.photo.path) %> );">
          </div>

         <div class="product-body">
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/filouzzz">

          <div class="card-user-dash">
            <h2><%= destination.name %></h2>
            <p><%= destination.planet_type %></p>
          </div>

          <%= link_to 'Edit Destination', edit_destination_path(destination), class: "btn rounded-black" %>

        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>


</div>
</div>
</div>


