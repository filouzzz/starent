
<div class="container ">
  <div class=" title-front text-center">
    <h2>This is your booked Destinations all over the universe</h2>
  </div>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-xs-12 col-sm-6 col-md-4 ">
      <div class="card">
       <div class="card-img " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path booking.destination.photo %>);">


         <div class="card-block">
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/filouzzz">

          <div class="card-description">
            <h2><%= booking.destination.name %></h2>
            <p><%= booking.destination.planet_type %></p>
          </div>
          <div>
            <p> booked from <%= booking.start_date %> to <%= booking.end_date %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

