<div class="container ">
  <% if @bookings.empty? %>
  <div class=" title-front text-center">
    <h2>No Booking</h2>
  </div>
  <% else %>
  <div class=" title-front text-center">
    <h2>This is your booked Destinations all over the universe</h2>
  </div>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-xs-12 col-sm-12 col-md-12 ">
      <div class="product">
       <div class="card-img product-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path booking.destination.photo %>);">

        </div>
         <div class="product-body">

            <% if   current_user.avatar.nil? %>
        <%= image_tag "rocket.png", class: "avatar card-user-dash", id: "logo" %>
        <% else %>
        <%= cl_image_tag current_user.avatar.path, class: "avatar card-user-dash" %>
        <% end %>
          <div class="">
            <h3><%= booking.destination.name %></h3>

            <p><%= booking.destination.planet_type %></p>
            <p> booked from <%= booking.start_date %> to <%= booking.end_date %></p>

            <%= link_to 'Delete Booking', destination_booking_path(booking.destination, booking),method: :delete, class: "btn btn-primary" %>

          </div>
         </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>







