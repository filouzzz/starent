<div class="container">
  <div class="text-center">
    <h1>This is our Destinations all over the universe</h1>
  </div>
  <div class="row">
    <% @destinations.each do |destination| %>
    <div class="col-xs-6 col-sm-6 col-md-4 ">
      <div class="card margin-bottom-10" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path destination.photo %>);">
        <div class="card-description">
          <h2><%= destination.name %></h2>
        </div>
        <div class="card-buttons">
          <p><%=  link_to 'Show destination', destination_path(destination), class: "btn btn-red-small"%></p>
        </div>
        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
      </div>
    </div>
    <% end %>
  </div>
</div>


<div class="top-padding-100 text-center">
  <p><%= link_to 'New Destination', new_destination_path, class: "btn btn-primary"%></p>
</div>
