
<div class="container searchsize">
  <div class="row ">
    <div class="ccol-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <br>
      <div class="input-group">

        <span class="input-group-btn">
          <%= submit_tag "Search", class:"btn btn-default  " %>
        </span>
        <%= form_tag(destinations_path, :method => "get", ) do %>
        <%= text_field_tag :search, params[:name], class:"form-control rounded-white-search", placeholder: "Search Destinations" %>

        <% end %>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->
</div>

<%= render 'shared/cards' %>
<br>
<div class="top-padding-100 text-center">
  <% if current_user %>
  <p><%= link_to 'New Destination', new_destination_path, class: "btn btn-primary rounded-black "%></p>
  <% else %>
  <p>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-primary rounded-red" %>
  </p>
  <% end %>
</div>
