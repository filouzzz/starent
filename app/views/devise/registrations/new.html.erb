<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-4">
      <div class="form-inputs" >
        <h2>Sign up</h2>
        <%= simple_form_for @user do |f| %>
        <%= f.input :first_name, :label => 'Your first_name please' %>
        <%= f.input :last_name, :label => 'Your last_name please' %>
        <%= f.input :encrypted_password, :hint => 'No special characters.' %>
        <%= f.input :remember_me, :as => :boolean %>
        <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
