<div class="form-login form-spacing">
  <div class="container">
    <div class="row ">
      <div class="col-xs-6 col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 col-xs-offset-3">
        <div class="form-inputs text-center" >
          <h2 class="new-header-page">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'email@mail.com'  %>
            <%= f.input :password, required: false, label: false, placeholder: '********'  %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "rounded-white" %>
          </div>
          <% end %>
          <%= render "devise/shared/links"%>
        </div>
      </div>
    </div>
  </div>
</div>
